%h1 Listing users
.table-responsive
  %table.table.table-striped.table-bordered
    %thead
      %tr
        %th Email
        %th Date Joined
    %tbody
      - @users.each do |user|
        %tr
          %td= user.email
          %td= user.created_at.to_date
          -if current_user
            %td= link_to 'Show', user
            %td= link_to 'Edit', edit_user_path(user)
            %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }
